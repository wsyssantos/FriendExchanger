<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/contentImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/userpic1"
            />

        <RelativeLayout
            android:id="@+id/containerNameInitials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_view">
            <TextView
                android:id="@+id/txtNameInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WS"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_toRightOf="@+id/contentImage"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTransferDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="21 Jul 2016"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            android:text="Wesley Santos"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="right">
        <TextView
            android:id="@+id/txtTransferValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2E8E98"
            android:text="R$ 33"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/txtTransferTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            android:text="12:06"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>